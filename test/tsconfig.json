{
  "description": "This tsconfig file is used to build the e2e tests",
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM","ES6","DOM.Iterable","ScriptHost"],
    "module": "commonjs",
    "baseUrl": ".",
    "rootDir": "../",
    "paths": {
      "components/services/bb-localize/locale-loader": ["../app/components/services/bb-localize/locale-loader.node"],
      "*": ["../app/*", "../app/components/*", "../typings/*"]
    },
    "typeRoots": ["node_modules/@types", "typings"],
    "declaration": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "types": [ ],
    "outDir": "../build/test"
  },
  "files": [
    "../app/app.d.ts",
    "./e2e/e2e_test.d.ts"
  ],
  "include": [
    "./**/*"
  ],
  "exclude": [
    "../app/vendor/**/*.*",
    "../node_modules/**/*.*"
  ],
  "compileOnSave": false
}
